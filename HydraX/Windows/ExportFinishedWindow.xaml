<Window x:Class="HydraX.Windows.ExportFinishedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Export Finished" Height="155" Width="400" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="#FF1B1B1B">
        <Label Content="Export Complete" Margin="10,10,10,0" Background="{x:Null}" Foreground="White" FontSize="18" Height="37" VerticalAlignment="Top"/>
        <Button x:Name="CloseWindow" Click="CloseWindow_Click"  Content="Close" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="84" Height="28"/>
        <Button x:Name="OpenExportFolder" Click="OpenExportFolder_Click" Content="Go to Export Folder" HorizontalAlignment="Left" Margin="99,89,0,0" VerticalAlignment="Top" Width="126" Height="28"/>
        <Label  x:Name="ExportedAssets" Content="Exported {0} Assets. {1} Failed to Export." Margin="10,47,10,0" VerticalAlignment="Top" Height="36" Foreground="White"/>

    </Grid>
</Window>
